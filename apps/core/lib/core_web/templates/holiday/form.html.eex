<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :title %>
  <%= text_input f, :title %>
  <%= error_tag f, :title %>

  <%= label f, :description %>
  <%= textarea f, :description %>
  <%= error_tag f, :description %>

  <%= label f, :from %>
  <%= datetime_select f, :from %>
  <%= error_tag f, :from %>

  <%= label f, :to %>
  <%= datetime_select f, :to %>
  <%= error_tag f, :to %>

  <%= label f, :purpose %>
  <%= text_input f, :purpose %>
  <%= error_tag f, :purpose %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
